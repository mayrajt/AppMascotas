<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mayrajaramillo.appmascotas.NuevaTarea">

    <include android:id="@+id/app_bar" layout="@layout/app_bar"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="0.3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tarea_text"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:textColor="@color/textPrimaryColor"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/spinnerTareas"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
      android:layout_marginTop="16dp"
       />
</LinearLayout>

    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frecuencia_text"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:textColor="@color/textPrimaryColor"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    <Spinner android:id="@+id/spinnerFrecuencia"
    android:layout_width="240dp"
    android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="vertical">
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="@string/guardar_btn"
        android:background="@color/morado2"
        />
    </LinearLayout>

</LinearLayout>
